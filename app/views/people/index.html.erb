<h1>Listing people</h1>

<div id="foo">
  <% filters(@people) do |filters| %>
    <%= filters.text_filter :name %>
    <%= filters.options_filter :age, [15, 16, 17] %>
  <% end %>
  
  <% listing(@people, :html_options => {:class => "foobar"}) do |listing| %>
    <%= listing.column :name, :html_options => {:class => "foobar"} %>
    <% listing.column :age do |person| %>
      <%= "My age is #{person.age}" %>
    <% end %>
    
    <% listing.actions do |person| %>
      <td><%= link_to 'Show', person %></td>
      <td><%= link_to 'Edit', edit_person_path(person) %></td>
      <td><%= link_to 'Destroy', person, :confirm => 'Are you sure?', :method => :delete %></td>
    <% end %>
  <% end %>
</div>

<%= pagination @people %>

<%= link_to 'New person', new_person_path %>
